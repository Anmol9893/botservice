{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "id": "TopContainer",
          "columns": [
            {
              "type": "Column",
              "items": [
                {
                  "type": "Image",
                  "style": "Person",
                  "url": "https://cloudhostingindonesia.com/wp-content/uploads/2017/12/Microsoft-Luncurkan-Azure-Bot-Service.png",
                  "size": "Small"
                }
              ],
              "width": "auto"
            },
            {
              "type": "Column",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "height": "stretch",
                  "size": "Large",
                  "weight": "Bolder",
                  "color": "Accent",
                  "text": "Welcome to Bot Framework"
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "text": "Now that you successfully ran your bot, you can use this Adaptive Card to further expand your knowledge of Bot Framework.",
      "wrap": true,
      "maxLines": 3
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "Learn More",
      "url": "https://docs.microsoft.com/en-us/azure/bot-service/?view=azure-bot-service-4.0"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Ask a question",
      "url": "https://stackoverflow.com/questions/tagged/botframework"
    },
    {
      "type": "Action.OpenUrl",
      "title": "Learn how to deploy",
      "url": "https://docs.microsoft.com/en-us/azure/bot-service/bot-builder-howto-deploy-azure?view=azure-bot-service-4.0"
    }
  ]
}